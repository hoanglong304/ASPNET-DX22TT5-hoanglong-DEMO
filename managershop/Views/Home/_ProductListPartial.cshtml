@model IEnumerable<managershop.Models.Product>

@foreach (var product in Model)
{
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="image-wrapper d-flex align-items-center justify-content-center" style="height: 250px; overflow: hidden;">
                <img src="@product.ImageUrl" class="card-img-top w-100 object-fit-cover" alt="@product.Name" />
            </div>
            <div class="card-body text-center">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">@product.Description</p>
                <p class="fw-bold text-danger">@product.Price.ToString("#,##0")</p>
                <div class="d-flex justify-content-center gap-2 mt-2">
                    <a href="/Product/Details/@product.Id" class="btn btn-primary px-3">Mua</a>
                    <a href="#" class="btn btn-outline-success px-3 add-to-cart-btn" data-product-id="@product.Id">
                        <i class="fa-solid fa-cart-shopping"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
}
