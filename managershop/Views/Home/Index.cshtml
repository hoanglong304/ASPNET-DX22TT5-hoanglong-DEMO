@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<managershop.Models.Product>

@section Banner {
    <section class="sc-banner-top bg-dark text-white text-center py-5">
        <div class="container">
            <h1 class="display-4 fw-bold">Khám phá những đôi giày đỉnh cao</h1>
            <p class="lead">Sale up to 50% - Mua ngay hôm nay!</p>
            <a href="/Product" class="btn btn-primary btn-lg">Mua ngay</a>
        </div>
    </section>
}
<h1 class="text-center mb-5 mt-5">Danh sách sản phẩm home page</h1>

<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="image-wrapper d-flex align-items-center justify-content-center" style="height: 250px; overflow: hidden;">
                    <img src="@product.ImageUrl" class="card-img-top w-100 object-fit-cover" alt="@product.Name" />
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="fw-bold text-danger">@product.Price.ToString("#,##0")</p>
                    <a href="#" class="btn btn-primary">Mua</a>
                </div>
            </div>
        </div>
    }
</div>
