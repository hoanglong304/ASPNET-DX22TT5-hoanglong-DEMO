@model ProductEditModel

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<h2 class="mb-4">Chỉnh sửa sản phẩm</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id" />

    <div class="mb-3">
        <label asp-for="Product.Name" class="form-label"></label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Description" class="form-label"></label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Price" class="form-label"></label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Quantity" class="form-label"></label>
        <input asp-for="Product.Quantity" class="form-control" />
        <span asp-validation-for="Product.Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.BrandId" class="form-label"></label>
        <select asp-for="Product.BrandId" asp-items="Model.BrandList" class="form-select"></select>
        <span asp-validation-for="Product.BrandId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.CategoryId" class="form-label"></label>
        <select asp-for="Product.CategoryId" asp-items="Model.CategoryList" class="form-select"></select>
        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ảnh hiện tại</label><br />
        <img src="@Model.Product.ImageUrl" style="height: 150px;" />
    </div>

    <div class="mb-3">
        <label class="form-label">Thay ảnh mới (nếu muốn)</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
</form>
