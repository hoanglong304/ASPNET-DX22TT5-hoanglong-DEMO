@model IEnumerable<managershop.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<h2 class="mb-4">Lịch sử đơn hàng</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Bạn chưa có đơn hàng nào.</div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Mã đơn</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.Total.ToString("#,##0") VNĐ</td>
                    <td>@order.Status</td>
                    <td>
                        <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-sm btn-info">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
